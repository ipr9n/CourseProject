@model List<LogicLayer.ViewModels.CollectionSearchViewModel>


@{
    ViewBag.Title = "Search";
    Layout = "~/Views/Shared/_LayoutProfile.cshtml";
}

<h2>@Resources.Resources.search</h2>

@if (Model.Count > 0)
{
    foreach (var collection in Model)
    {
        <h3>@Resources.Resources.item_search: @collection.CollectionName</h3>
        @Html.Partial("SearchResultTable", collection.CollectionItems)
        <br />
    }
}
else
{
    @Resources.Resources.items_none
}
<script>
    $(document).ready(function () {
        $('table.table').DataTable({
            responsive: true
        })
    })



