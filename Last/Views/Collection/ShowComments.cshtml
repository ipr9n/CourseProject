@model List<LogicLayer.ViewModels.CommentViewModel>

@foreach (var post in Model)
{
    <div class="card">
        <div class="card-header">
@post.AuthorName
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>@post.CommentText</p>
            </blockquote>
        </div>
    </div>
}
