@model LogicLayer.ViewModels.UserViewModel

@{
    Layout = "~/Views/Shared/_LayoutProfile.cshtml";
}

<div class="content div-shadow">

    <div class="container-fluid" style="margin-top: 20px">
        <div class="row">
            <div class="col-md-3">
                <img src="@Model.AvatarUrl" style="margin: 30px;border-radius: 100%; max-width: 200px; max-height: 200px;" />
                @if (User.IsInRole("admin") && Model.Id != ViewBag.MyId)
                {
                    using (Html.BeginForm("CreateCollection", "Collection", FormMethod.Get))
                    {
                        @Html.HiddenFor(model => model.Id)
                        <input type="submit" class="btn btn-primary btn-block" value="@Resources.Resources.create_user_collection" />
                    }
                }
                </div>
            <div class="col-md-9" style="margin-top: 30px;">
                @Html.Partial("ProfileDetails")
            </div>
        </div>
    </div>
</div>
